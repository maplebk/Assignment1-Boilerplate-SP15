{{#if error}}
  <div class="alert alert-danger" role="alert">No Such Account!</div>
{{/if}}
<div class="container">
<div id="login">
	<h1>Welcome to Simplicipe</h1>
	<form id="form">
		Username: <br>
		<input type="text" name="Username" id="user" onkeyup="verify()"><br><br>
		Password: <br>
		<input type="text" name="Password" id="pass" onkeyup="verify()"><br>
	</form>
	<br>
	<div id="logdiv">
		<a class="changeurl" href="/verify"><button class="btn btn-default" type="button">Login</button></a>
		<a href="/"><button class="btn btn-default" type="button">Cancel</button></a>
	</div>
	<br>
	<p style="font-size:18px;">
		Don't have an account? Register with us <span><a href="register" style="color:orange;">here</a></span>!
	</p>
	<p style="font-size:18px;">
		<a href="/forgot">I forgot my password!</a>
	</p>
</div>
</div>
<script>
  function verify() {
		var usern = $("#user").val();
		var passw = $("#pass").val();
		if (usern === "" || passw === "")
		{
			$('.changeurl').attr("href", "/login");
		}
		else {
			$('.changeurl').attr("href", "/verify/" + usern + "/" + passw);
		}
  }
</script>

<style>
body {
	text-align: center;
}
</style>
