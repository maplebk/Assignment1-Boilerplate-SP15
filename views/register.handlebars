	<script>
		function accountConfirm() {
			var txt;
			var dest;
			var a = confirm("Finalize this name, email, and password?");
			if (a=true) {
				location.replace("account");
				txt = "Creating account!";
			}
			else {
				location.replace("register");
				txt = "Restarting creation process.";
			}
		}
	</script>
</div>
